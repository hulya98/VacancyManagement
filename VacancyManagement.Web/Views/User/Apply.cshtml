@model VacancyManagement.Domain.Dtos.User.UserIncludeCVRequest

@{
    ViewData["Title"] = "Apply to Vacancy";
}

<h2>Apply to Vacancy</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" required />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" required />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" required />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CV" class="control-label"></label>
        <input asp-for="CV" type="file" class="form-control" required />
        <span asp-validation-for="CV" class="text-danger"></span>
    </div>
    <br />
    <input type="hidden" asp-for="CVName" value="cv" />


    <button type="submit" class="btn btn-primary">Start Quiz</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}